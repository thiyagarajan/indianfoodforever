<%= form_for([@recipe, @recipe.comments.build]) do |f| %>

    <div class="field">
      <%= f.label :commenter %>
      <br/>
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :body %>
      <br/>
      <%= f.text_area :body, :size=>'10x10', :style=>'resize:none;width:500px;' %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
