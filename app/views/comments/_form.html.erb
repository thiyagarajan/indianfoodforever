<div class="form-horizontal">
  <%= form_for([@recipe, @recipe.comments.build]) do |f| %>
      <div class="control-group">
        <label class="control-label" for="inputEmail"><%= f.label :commenter %></label>

        <div class="controls">
          <%= f.text_field :commenter %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="inputPassword"><%= f.label :body %></label>

        <div class="controls">
          <%= f.text_area :body, :size => '10x10', :style => 'resize:none;width:500px;' %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit :class=>'btn btn-primary' %>
        </div>
      </div>
  <% end %>
</div>