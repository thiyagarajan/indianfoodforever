<dl class="dl-horizontal">
  <dt>Recipe Name:</dt>
  <dd><%= @recipe.name %></dd>
  <dt>Recipe Ingredients:</dt>
  <dd><%= @recipe.ingredients.html_safe %></dd>
  <dt>Recipe Description:</dt>
  <dd><%= @recipe.description.html_safe %></dd>
</dl>

<h3>Comments</h3>
<% unless @recipe.comments.blank? %>
    <%= render @recipe.comments %>
<% else %>
    No comments added!
<% end %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>
